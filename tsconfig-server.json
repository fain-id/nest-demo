{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./server"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "views"
  ]
}
